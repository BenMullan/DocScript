<!--
	NOTE:
	The actual content for the DSIDE MainWindow lies in the [IDEWindowContent.*] files.
	This enables the IDE Window to be embedded onto other frames.
-->
	
<Window
	x:Class="MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:dside="clr-namespace:DocScript.WindowsIDE"
	Width="800" Height="600" Background="LightGray"
	WindowState="Normal" WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow"
	x:Name="RibbonWindow" Title="DocScript IDE" Icon="/DSIDE;component/Images/DSIDE.ICO"
>
	
	<dside:IDEWindowContent x:Name="HostedIDEWindowContent" />

</Window>