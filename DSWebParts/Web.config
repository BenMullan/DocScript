<?xml version="1.0"?>
<configuration>
  <appSettings file="DSInteractive.config"/>
  <!--
    For a description of web.config changes see http://go.microsoft.com/fwlink/?LinkId=235367.

    The following attributes can be set on the <httpRuntime> tag.
      <system.Web>
        <httpRuntime targetFramework="4.8" />
      </system.Web>
  -->
  <system.web>
    <compilation debug="true" explicit="true" strict="true" targetFramework="4.8"/>
    <!-- Don't scan for HTML in the requests -->
    <pages validateRequest="false" controlRenderingCompatibilityVersion="4.0"/>
    <httpRuntime requestValidationMode="2.0"/>
  </system.web>
  <system.webServer>
    <!-- For directories without a Default-Document -->
    <directoryBrowse enabled="true"/>
    <!-- Do respond to API-Requests that cause a Server-Side Exception -->
    <httpErrors errorMode="Detailed"/>
    <!-- Support Bootstrap Icons. MIME Types herefor should only configured on one *.config on the Server.
    If they're already present in the machine.config, for instance, then having them here too will actually cause an error. -->
    <staticContent>
      <mimeMap fileExtension=".woff" mimeType="font/woff"/>
      <mimeMap fileExtension=".woff2" mimeType="font/woff2"/>
    </staticContent>
  </system.webServer>
</configuration>